<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/repTileContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/pill_view_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/repTileContainer"
        app:layout_constraintTop_toTopOf="@+id/repTileContainer" />

    <Button
        android:id="@+id/repCancel"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#00FFFFFF"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="@string/mt9"
        android:textColor="@color/error"
        app:layout_constraintBottom_toBottomOf="@+id/repTileContainer"
        app:layout_constraintEnd_toEndOf="@+id/repTileContainer"
        app:layout_constraintTop_toBottomOf="@+id/repDate" />

    <Button
        android:id="@+id/repApprove"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:backgroundTint="#00FFFFFF"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="@string/mt8"
        android:textColor="@color/primary"
        app:layout_constraintBottom_toBottomOf="@+id/repCancel"
        app:layout_constraintEnd_toStartOf="@+id/repCancel"
        app:layout_constraintTop_toTopOf="@+id/repCancel" />

    <TextView
        android:id="@+id/repDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/repTileContainer"
        app:layout_constraintTop_toTopOf="@+id/repTileContainer" />

    <Button
        android:id="@+id/repView"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/light_primary"
        android:text="@string/mt7"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/repTileContainer"
        app:layout_constraintTop_toBottomOf="@+id/repName" />

</androidx.constraintlayout.widget.ConstraintLayout>